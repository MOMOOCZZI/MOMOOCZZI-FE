<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >
    <ImageView
        android:layout_width="258dp"
        android:layout_height="59dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"/>
    <EditText
        android:id="@+id/idtext"
        android:layout_width="325dp"
        android:layout_height="54dp"
        android:background="@drawable/logintext"
        android:hint="\t\t\t아이디를 입력해주세요"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/passtext"
        android:layout_width="325dp"
        android:layout_height="54dp"
        android:background="@drawable/logintext"
        android:hint="\t\t\t비밀번호를 입력해주세요"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/loginbtn"
        android:layout_width="325dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:backgroundTint="#00B6F1"
        android:layout_marginTop="7dp"
        android:text="로그인"/>
    <CheckBox
        android:id="@+id/checkautologin"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="자동로그인"
        android:buttonTint="#FFDA48"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:textColor="#A3A3A3"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/findidbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 찾기"
            android:backgroundTint="#FFFFFF"
            android:textColor="#8B8B8B"
            android:textSize="12sp"
            android:textStyle="bold"/>
        <View
            android:layout_width="2dp"
            android:layout_height="17dp"
            android:background="#CCCCCC"
            android:layout_gravity="center_vertical"/>
        <Button
            android:id="@+id/findpassbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:backgroundTint="#FFFFFF"
            android:textColor="#8B8B8B"
            android:textSize="12sp"
            android:textStyle="bold"/>
        <View
            android:layout_width="2dp"
            android:layout_height="17dp"
            android:background="#CCCCCC"
            android:layout_gravity="center_vertical"/>
        <Button
            android:id="@+id/registerbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:backgroundTint="#FFFFFF"
            android:textColor="#8B8B8B"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginVertical="16dp"
        android:layout_gravity="center"
        android:paddingTop="30dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SNS 로그인하기"
            android:textColor="#888888"
            android:paddingHorizontal="12dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#CCCCCC" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/naverlogin"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/naverlogo"
            android:scaleType="fitCenter"
            android:background="@null" />

        <ImageButton
            android:id="@+id/googlelogin"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/googlelogo"
            android:scaleType="fitCenter"
            android:background="@null" />

        <ImageButton
            android:id="@+id/kakaologin"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/kakaologo"
            android:scaleType="fitCenter"
            android:background="@null" />

    </LinearLayout>
</LinearLayout>