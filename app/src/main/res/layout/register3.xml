<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- 상단 헤더 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="10dp">

                <ImageButton
                    android:id="@+id/backbtn"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/back_button" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="회원가입"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D9D9D9" />

            <!-- 단계 표시 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round_border"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  1  "
                    android:textColor="#888888"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  2  "
                    android:textColor="#888888"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="  3  "
                    android:background="@drawable/circle_selected"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="24dp"
                android:text="기본 소개를 입력해주세요."
                android:textColor="#575757"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- 별명 입력 -->
            <!-- 별명 입력 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="별명"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="start" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/registernick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="별명을 입력해주세요"
                    android:backgroundTint="#CCCCCC"
                    android:textSize="14sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/btn_round_border"
                    android:text="확인"
                    android:textColor="#8B8B8B"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- 소개글 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소개글"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_gravity="start"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/introet"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="top|start"
                android:padding="12dp"
                android:background="@drawable/round_border"
                android:hint="자신을 소개하는 글을 입력해주세요"
                android:textSize="14sp"
                android:layout_marginBottom="32dp" />

            <!-- 회원가입 버튼 -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/register_real_grey_button"
                android:enabled="false"
                android:text="회원가입"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingVertical="12dp" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
