<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu_layer">

    <LinearLayout
        android:id="@+id/pageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/menuHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/indicator1"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/indicator_inactive" />

        <View
            android:id="@+id/indicator2"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/indicator_inactive" />

        <View
            android:id="@+id/indicator3"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/indicator_inactive" />

        <View
            android:id="@+id/indicator4"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/indicator_inactive" />

        <View
            android:id="@+id/indicator5"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/indicator_inactive" />

        <View
            android:id="@+id/indicator6"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/indicator_inactive" />
    </LinearLayout>


    <ImageView
        android:id="@+id/menuHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/menu_header"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/prev_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/chevron_left"
        android:contentDescription="이전"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/next_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/chevron_right"
        android:contentDescription="다음"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
